<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/relativeTag"
        android:background="#0aa">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageClock"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/clock1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alert"
            android:id="@+id/textAlarmTitle"
            android:textColor="#00f"
            android:textSize="30sp"
            android:layout_above="@+id/imageClock"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="43dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="50dp"
            android:paddingRight="50dp"
            android:layout_below="@+id/imageClock"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="45dp">

            <Button
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Open App"
                android:id="@+id/btnOpenApp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:background="@color/colorOrange"/>

            <Button
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Dismiss"
                android:id="@+id/btnDismiss"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:background="@color/colorOrange"/>
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="23:35"
            android:id="@+id/textHourAndMin"
            android:textColor="#0f0"
            android:textSize="20sp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>
</RelativeLayout>


