<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.tax.mystar.kondha.MainActivity"
    tools:showIn="@layout/app_bar_main">


    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="AD"
        android:id="@+id/btnAD"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="@color/colorStart"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/logo"/>

    <Button
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="Start"
        android:id="@+id/btnStart"
        android:layout_above="@+id/btnAD"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="39dp"
        android:background="@color/colorOrange"
        />

    <RelativeLayout
        android:layout_width="230dp"
        android:layout_height="313dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/relSelectFragments"
        android:background="#ddd"
        android:visibility="gone">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:gravity="center"
            android:text="Please select fragments"
            android:id="@+id/textSelect"
            android:textSize="18sp"
            android:textColor="#fff"
            android:background="#555"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:textSize="20sp"
            android:textColor="#333"
            android:text="Santh"
            android:id="@+id/textSanth"
            android:layout_below="@+id/textSelect"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginRight="7dp"
            android:layout_marginLeft="7dp"
            android:background="#000"
            android:id="@+id/textBreak1"
            android:layout_below="@+id/textSanth"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:textSize="20sp"
            android:textColor="#333"
            android:text="Dukh"
            android:id="@+id/textDukh"
            android:layout_below="@+id/textBreak1"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginRight="7dp"
            android:layout_marginLeft="7dp"
            android:background="#000"
            android:id="@+id/textBreak2"
            android:layout_below="@+id/textDukh"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:textSize="20sp"
            android:textColor="#333"
            android:text="Mahi"
            android:id="@+id/textMahi"
            android:layout_below="@+id/textBreak2"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginRight="7dp"
            android:layout_marginLeft="7dp"
            android:background="#000"
            android:id="@+id/textBreak3"
            android:layout_below="@+id/textMahi"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:textSize="20sp"
            android:textColor="#333"
            android:text="Prak"
            android:id="@+id/textPrak"
            android:layout_below="@+id/textBreak3"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>
</RelativeLayout>
